{% extends "base.html.twig" %}

{% block title %}HoussArtGallery- Modification de Collection{% endblock %}

{% block body %}

<style>
    .banner{
        height:100%;
        background:linear-gradient(rgba(0, 0, 0,.5),rgba(0, 0, 0,.5)),url(https://cdn.pixabay.com/photo/2016/09/04/12/38/living-room-1643855_1280.jpg) center fixed no-repeat;
        background-size:cover; 
    }
</style>

<body>
<div class="container-fluid banner py-5">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
                <div class="col-sm-12 col-md-10">

            <div class="row">
               <h1 class=" text-center text-white fs-1 heading">Modification d'une collection</h1>

               {# read and display just one flash message type #}
               {% for message in app.flashes('success') %}
               <div class="alert alert-success text-center mt-4">
                {{ message}}
               </div>
               {% endfor %}

            </div>

            <div class="row bg-warning py-5 mb-5">
                {{ form_start(form) }}
 
                <div class="form-group text-white fs-4">       
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="form-error">
                    {{ form_errors(form.name)}}
                </div>
                </div>

                <div class="form-group text-white fs-4">    
                {{ form_label(form.artist) }}
                {{ form_widget(form.artist) }}
                <div class="form-error">
                    {{ form_errors(form.artist)}}
                </div>
                </div>

                <div class="form-group text-white fs-4">    
                {{ form_label(form.category) }}
                {{ form_widget(form.category) }}
                <div class="form-error">
                    {{ form_errors(form.category)}}
                </div>
                </div>

                <div class="form-group text-white fs-4">    
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <div class="form-error">
                    {{ form_errors(form.price)}}
                </div>
                </div>
        
                <div class="form-group text-white fs-4">    
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                <div class="form-error">
                    {{ form_errors(form.description)}}
                </div>
                </div>

                <div class="form-group text-white fs-4 mt-2">    
                {{ form_label(form.products) }}
                {{ form_widget(form.products) }}
                <div class="form-error">
                    {{ form_errors(form.products)}}
                </div>
                </div>


                <div class="form-group text-white fs-4">    
                {{ form_label(form.isFavorite) }}
                {{ form_widget(form.isFavorite) }}
                <div class="form-error">
                    {{ form_errors(form.isFavorite)}}
                </div>
                </div>


                <div class="form-group text-white">    
                {{ form_row(form._token) }}
                </div>

                <div class="form-group fs-5 bg-warning py-3">    
                {{ form_row(form.submit) }}
                </div>
                {{ form_end(form)}}
            </div>
            </div>
        </div>
    </div>
  </div>
</body>

{% endblock %}